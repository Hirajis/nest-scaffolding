{
  "name": "pm-node-app-with-nestjs",
  "version": "1.0.0",
  "description": "description",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:build": "rimraf dist && npm run build && copyfiles ormconfig.js package*.json logs/all-logs.example.log secured/example.env pm2.config.json dist",
    "devservermode": "pm2 delete --silent dev-app && pm2 start pm2.config.json --only dev-app && pm2 save",
    "qaservermode": "pm2 delete --silent qa-app && pm2 start pm2.config.json --only qa-app && pm2 save",
    "prodservermode": "pm2 delete --silent prod-app && pm2 start pm2.config.json --only prod-app && pm2 save",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "@okta/jwt-verifier": "^1.0.0",
    "@sendgrid/mail": "^6.4.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.11.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.17.0",
    "injection-js": "^2.2.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "pg": "^7.10.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "twilio": "^3.39.2",
    "typeorm": "^0.2.16",
    "typescript": "^3.2.4",
    "uuid": "^3.3.2",
    "watchman": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/supertest": "^2.0.7",
    "@nestjs/testing": "^6.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "ts-loader": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
